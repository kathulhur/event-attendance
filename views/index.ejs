<%- include('./partials/navbar'); %> 
<div class="main-container">

    <div id="ongoingEvents" class="container my-5 border border-dark rounded-3 p-4">
        <% if(ongoingEvents){ %>
        <div class="row">
            <div class="col-3 d-flex flex-column justify-content-center">
                <div>
                    <h1>Ongoing Events</h1>
                </div>
                <div>
                    <a href="/events/ongoing" class="link-success">See all ongoing events</a>
                </div>
            </div>
            <% ongoingEvents.forEach(function(event){ %>
                <div class="col">
                    <div class="card text-center">
                        <div class="card-body">
                            <h5 class="card-title"><%= event.name %></h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="/events/<%= event.slug %>" class="btn btn-outline btn-outline-success">See more</a>
                        </div>
                        <div class="card-footer text-muted">
                            <%= event.start.toDateString() %>
                        </div>
                    </div>
                </div>
            <% });%>
        </div>

        <% } else { %>
            <h4 class="text-center">There are no ongoing events</h4>
        <% } %>
    </div>

    <div id="incomingEvents" class="container my-5 border border-dark rounded-3 p-4">
        <% if(incomingEvents){ %>
        <div class="row">
            <div class="col-3 d-flex flex-column justify-content-center">
