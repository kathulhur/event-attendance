<%- include('./partials/navbar'); %>
<a href="/">
    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="dark" class="bi bi-arrow-return-left mt-3 ms-3" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
    </svg>
</a>
<div class="container" id="mainContainer">

    <div class="container my-4" id="incomingEvents">
        <h1 class="text-center">INCOMING EVENTS</h1>
        <% for(let i = 0; i < incomingEvents.length; ++i) { %>
            <% if((i+1) % 3 === 1) { %>
            <div class="row">
            <% }; %>

                <div class="col-4 p-0 my-3">
                    <div class="container">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="card-title"><%= incomingEvents[i].name %></h3>
                                <p class="card-text small text-start">Lorem ipsum dolor sit amet consectetur adipisicing elit. Temporibus praesentium obcaecati, aspernatur deserunt dicta assumenda cum optio? Quasi, nesciunt, eum, vel dolorum odit sapiente natus aut dolores accusantium totam aliquid?</p>
                                <a href="/events/<%= incomingEvents[i].slug %>" class="link-success">See more</a>
                            </div>
                            <div class="card-footer text-muted">
                                <b><%= incomingEvents[i].start.toDateString() %></b>
                            </div>
                        </div>
                    </div>
                </div>
                
            <% if((i+1) % 3 === 0) { %>
            </div>
            <% }; %>
        <% }; %>
        
        <% if (incomingEvents.length != 0 && incomingEvents.length % 3 === 0) { %>
        </div>
        <% }; %>
    </div>
    
    <div class="container my-4" id="pastEvents">
        <h1 class="text-center">Past Events</h1>
        <% for(let i = 0; i < pastEvents.length; ++i) { %>
            <% if((i+1) % 2 === 1) { %>
            <div class="row">
            <% }; %>

                <div class="col-4 p-0 my-3">
                    <div class="container">
                        <div class="card text-center">
                            <div class="card-body">
                                <h3 class="card-title"><%= pastEvents[i].name %></h3>
                                <p class="card-text text-start">Lorem ipsum dolor sit amet consectetur adipisicing elit. Temporibus praesentium obcaecati, aspernatur deserunt dicta assumenda cum optio? Quasi, nesciunt, eum, vel dolorum odit sapiente natus aut dolores accusantium totam aliquid?</p>
                                <a href="/events/<%= pastEvents[i].slug %>" class="link-success">See more</a>
                            </div>
                            <div class="card-footer text-muted">
                                <b><%= pastEvents[i].start.toDateString() %></b>
                            </div>
                        </div>
                    </div>
                </div>

            <% if((i+1) % 2 === 0) { %>
            </div>
            <% }; %>
        <% }; %>
        
        <% if (pastEvents.length != 0 && pastEvents.length % 3 === 0) { %>
        </div>
        <% }; %>
    </div>
</div>
