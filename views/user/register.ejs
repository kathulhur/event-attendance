<%- include('../partials/navbar'); %> 
<div class="container w-50 mt-5 d-flex justify-content-center">

    <form id="loginForm" class="w-100 m-5" action="/users/register" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <%- include('../partials/messages'); %>
        <div class="mb-3 w-100">
            <label class="form-label" for="fieldName">Name</label>
            <input class="form-control" id="fieldName" name="name" type="text" placeholder="John Doe" value="<%= typeof form !== 'undefined' ? form.name : '' %>">
        </div>

        <div class="mb-3 w-100">
            <label class="form-label" for="fieldEmail">Email</label>
            <input class="form-control" id="fieldEmail" name="email" type="email" placeholder="johndoe@email.com" value="<%= typeof form !== 'undefined' ? form.email : '' %>">
        </div>

        <div class="mb-3">
            <label class="form-label" for="fieldPassword">Password</label>
            <input class="form-control" id="fieldPassword" name="password" type="password" placeholder="password" value="<%= typeof form !== 'undefined' ? form.password : '' %>">
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>
        
    </form>
</div>
