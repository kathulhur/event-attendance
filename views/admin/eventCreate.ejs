<div id="main-container" class="mb-5">

    <div id="form-container" class="container w-50 border rounded-3 p-5">
        <h2>Event Creation</h2><br>
        <form class="" action="/admin/events/create" method="post" id="eventForm">
            <label class="form-label" for="fieldName">Event Name</label>
            <input class="form-control" id="fieldName" type="text" name="name"><br>
            
            <label class="form-label" for="fieldDescription"></label>
            <textarea class="form-control" name="description" id="fieldDescription" cols="30" rows="10" form="eventForm">Enter description here</textarea><br>
        
            <label class="form-label" for="fieldStart">Start of Event</label>
            <input class="form-control" id="fieldStart" type="datetime-local" name="start"><br>
            
            <label class="form-label" for="fieldEnd">End of Event</label>
            <input class="form-control" id="fieldEnd" type="datetime-local" name="end"><br>
            
            <input class="btn btn-outline-success" type="submit">
        </form>
    </div>

</div>
