<div id="main-container" class="mb-5">

    <div id="form-container" class="container w-50 border rounded-3 p-5">
        <h2>Participant Edit</h2>
        <form id="participantEditForm" onsubmit="editParticipant(event)">
            <input type="hidden" name="id" value="<%= participant.id %>">
            <input type="hidden" name="event" value="<%= participant.event.id %>"><br>
        
            <label class="form-label" for="fieldName">Name</label>
            <input class="form-control" id="fieldName" type="text" name="name" value="<%= participant.name %>"><br>
        
            <label class="form-label" for="fieldAge">Age</label>
            <input class="form-control" id="fieldAge" type="number" name="age" value="<%= participant.age %>"><br>
        
            <label class="form-label" for="fieldCourse">Course</label>
            <input class="form-control" id="fieldCourse" type="text" name="course" value="<%= participant.course %>"><br>
        
            <label class="form-label" for="fieldInstitution">Institution</label>
            <input class="form-control" id="fieldInstitution" type="text" name="institution" value="<%= participant.institution %>"><br>
        
            <input class="btn btn-outline-success" type="submit">
        </form>

    </div>

</div>

<script src="/admin/javascripts/participant.js"></script>